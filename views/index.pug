extends layout

block page
  h1.mt-5 Cocktails main page


  form(method="POST")
    .form-group
      label(for='cocktailName') Enter a cocktail name here
      input#cocktailName.form-control(type='text' placeholder="Enter a name for a cocktail" name="cocktailName")
    .form-group
      .col-sm-10
        button.btn.btn-primary.col-sm-5(type='submit') Search

  if cocktail !== undefined 
    h3.mt-5 Pick a flavour 
    ul#cocktailsList.list-group.list-group-flash
      if cocktail.length 
        each val in cocktail 
          li.list-group-item #[a(href="#" class="cocktailAnchor" data-cocktail-name=`${val}`) #{val}]

